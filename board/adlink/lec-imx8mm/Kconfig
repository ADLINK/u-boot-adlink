if TARGET_LEC_IMX8MM

config SYS_BOARD
	default "lec-imx8mm"

config SYS_VENDOR
	default "adlink"

config SYS_CONFIG_NAME
	default "lec-imx8mm"

config CONFIG_IMX_DDRSIZE
	bool "Define lec-imx8mm DDR Size"
	depends on TARGET_LEC_IMX8MM

choice
	prompt "Select a lec-imx8mm DDR Size"
	depends on CONFIG_IMX_DDRSIZE

	config LPDDR4_2GB
		bool "LPDDR4_2GB"

	config LPDDR4_4GB
		bool "LPDDR4_4GB"

endchoice

source "board/adlink/common/Kconfig"

endif
